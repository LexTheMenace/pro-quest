
 <form action="/mission/edit/{{this.id}}" method="POST" class="missionAdd">
    <div class="form-group">
        <label for="name">Name:</label>  
        <input type="text" name="name" class="form-control" value="{{name}}">
    </div>
    <div class="form-group">
        <label for="desc">Desc:</label>  
        <input type="text" name="description" class="form-control" value="{{description}}"
    </div>
    <div class="form-group">
        <label for="team">Owners:</label>  
        <input type="text" name="owners" class="form-control" value="{{owners}}">
    </div>
    <div class="form-group">
        <label for="due">Due:</label>  
        <input type="date" name="due" class="form-control" value="{{due}}">
    </div>
     <div class="form-group">
        <label for="status">Set Status:</label>  
        <input type="checkbox" name="status" value="{{status}}" checked>
    </div>
    <input type="submit" value="EditMission"></button>

</form>
